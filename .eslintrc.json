{
  "extends": ["eslint:recommended", "prettier", "prettier/react", "plugin:react/recommended"],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-console": "off",
    "strict": ["error", "global"],
    "curly": "warn",
    "no-unused-vars": 2,
    "no-undef": 2
  },
  "ecmaFeatures": {
    "modules": true,
    "spread": true,
    "restParams": true
  }
}
